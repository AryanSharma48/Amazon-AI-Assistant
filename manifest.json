{
    "manifest_version" : 3,
    "name" : "SWAN",
    "version" : "0.2.1",
    "description" : "Let SWAN glide effortlessly through the messy reviews to build you a perfect summary of the product.",
    "action": {
        "default_popup" : "pop-up/popup.html"
    },
    "icons":{
        "32" : "assets/icon-32.png",
        "48" : "assets/icon-48.png"
    },
    "background" : {
        "service_worker" : "background.js"
    },
    "permissions":[
        "activeTab",
        "sidePanel",
        "scripting",
        "tabs",
        "storage"
    ],
    
    "host_permissions": [
        "https://generativelanguage.googleapis.com/*",
        "*://*.amazon.com/*",
        "*://*.amazon.in/*"
    ],
    "content_scripts": [
    {
      "matches": ["*://*.amazon.com/*", "*://*.amazon.in/*"],
      "js": ["content.js"]
    }
  ]
}